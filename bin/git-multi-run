#!/bin/bash

if [ ! -n "$1" ]; then
    echo "Must pass the name to 'git multi run'";
    exit 1;
fi

for i in `ls .git-multi/ | grep -v "${1}"`;
do
    GIT_WORK_TREE="." GIT_DIR=".git-multi/{$i}"
    echo ".git-multi" > ".git-multi/${1}/info/exclude"
    GIT_WORK_TREE="." GIT_DIR=".git-multi/${i}" git ls-files >> ".git-multi/${1}/info/exclude"
done

GIT_WORK_TREE="." GIT_DIR=".git-multi/${1}" $2
